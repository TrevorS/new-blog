<div class="pure-u-1-3">
  <div class="posts">
    <% @posts.each do |post| %>
      <div class="post">
        
        <h2 class="post-title">
          <%= get_post_link(post) %>
        </h2>

        <div class="post-creation">
          <%= get_post_creation(post) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
